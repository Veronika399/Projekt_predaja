<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrugiFragment"
    android:background="@mipmap/pozadina11"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Tablica"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:textAlignment="center"
        android:layout_marginTop="450px"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="90dp"
        android:background="@color/plava_poz"
        android:layout_gravity="center"
        >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Indeks tjelesne mase"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Kategorija"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ITM manji ili jednak 18.5"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pothranjenost"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ITM veći od 18.5 ili manji/jednak 24.9"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Normalna tjelesna masa"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ITM veći od 24.9 ili manji/jednak 29.9"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Prekomjerna tjelesna masa"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ITM veći od 29.9 ili manji/jednak 34.9"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pretilost"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ITM veće od 34.9"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ekstremna pretilost"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/teal_700"/>
        </TableRow>

    </TableLayout>

</FrameLayout>